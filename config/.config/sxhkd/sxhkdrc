##########################
#Launcher
##########################

super + shift + Delete
    st -e kill -9 -1

# terminal emulator
super + Return
    st

# program launcher
super + d
    rofi -show run

#GUI FM
super + shift + f
	pcmanfm

#Ranger FM
super + shift + r
	st -e ranger

#Audio Settings
super + shift + s
	st -e pulsemixer

#Web Browser
super + shift + w
    chromium

#Lock Screen
super + shift + x
	~/git/scripts/lock/lock

#Screenshot
shift + Print
	subshare screenshot -t selection

Print
	subshare screenshot



# Second Layer Keys
alt + w
    xdotool key Up --clearmodifiers Up
alt + s
    xdotool key Down
alt + a
    xdotool key Left
alt + d
    xdotool key Right


##########################
#System
##########################
# Keyboard Brightness

XF86KbdBrightnessDown
    kbBacklight.py --down
XF86KbdBrightnessUp
	kbBacklight.py --up

# Volume Keys

XF86AudioRaiseVolume
    setVolume.sh set 5%+
XF86AudioLowerVolume
    setVolume.sh set 5%-
XF86AudioMute
	setVolume.sh set toggle

# Screen Brightness

XF86MonBrightnessDown
	screenBrightness.sh -
XF86MonBrightnessUp
	screenBrightness.sh +

super + shift + z
	exec /home/sublime/git/scripts/lock/lock

##########################
#Window Management
##########################

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + shift + Escape
	bspc quit

# close
super + shift + q
	bspc node -c

# kill
super + alt + shift + q
	bspc node -k

# alternate between the tiled and monocle layout
super + grave
	bspc desktop -l next

# swap the current node and the biggest node on current desktop
super + b
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,s,f,space}
	bspc node -t {tiled,pseudo_tiled,fullscreen,floating}

XF86LaunchA
	bspc desktop -l next

XF86Explorer
    bspc node -f last

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}


# focus the next/previous node in the current desktop
super + {_,shift + }x
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local



super + button4
    bspc desktop -f next.local

super + button5
    bspc desktop -f prev.local





# focus the last node/desktop
super + Tab
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + w
    bspc monitor -f next


#
# preselect
#

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + Escape
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + shift + Escape
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# Swap focused window into preselect
super + c
	$HOME/.config/bspwm/windowpromotor

# expand a window by moving one of its side outward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# expand a window by moving one of its side outward
super + alt + shift + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# contract a window by moving one of its side inward
super + alt + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# move a floating window
alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Rotate Desktop right
super + e
	bspc node @/ -R 90

# Rotate Desktop left
super + q
	bspc node @/ -R -90

# increase / decrease window gap
super + equal
    bspc config -d $(bspc query -D -d) window_gap `expr $(bspc config -d $(bspc query -D -d) window_gap) + 5`

super + minus
    bspc config -d $(bspc query -D -d) window_gap `expr $(bspc config -d $(bspc query -D -d) window_gap) - 5`

super + o
    bspc config -d $(bspc query -D -d) window_gap 10

# make sxhkd reload its configuration files:
alt + shift + Escape
	pkill -USR1 -x sxhkd

